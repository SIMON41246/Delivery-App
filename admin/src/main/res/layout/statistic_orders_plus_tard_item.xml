<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="20dp"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="10dp"
    android:layout_marginStart="5dp"
    android:layout_marginEnd="5dp"
    android:orientation="vertical">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/statistic_order_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bottom_to_top_carre_blue"
        android:orientation="vertical">
        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-black"
            android:layout_marginTop="5dp"
            android:letterSpacing="0.1"
            android:gravity="center"
            android:text="nom du commande"
            android:textColor="@color/black"
            android:textSize="10dp" />
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/statistic_plus_tard_order_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:letterSpacing="0.1"
            android:ellipsize="end"
            android:gravity="center"
            android:text="BOOTS"
            android:textColor="@color/black"
            android:textSize="15dp" />
        <View
            android:layout_width="150dp"
            android:layout_height="0.5dp"
            android:layout_marginTop="5dp"
            android:layout_gravity="center_horizontal"
            android:background="@color/black"/>
        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-black"
            android:letterSpacing="0.1"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:text="l'adresse"
            android:textColor="@color/black"
            android:textSize="10dp" />
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/statistic_plus_tard_order_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:letterSpacing="0.1"
            android:text="HAY RACHAD G10"
            android:lines="2"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="15dp" />
        <View
            android:layout_width="200dp"
            android:layout_height="0.5dp"
            android:layout_marginTop="5dp"
            android:layout_gravity="center_horizontal"
            android:background="@color/black"/>
        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:weightSum="2">
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/statistic_plus_tard_order_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="sans-serif-black"
                android:letterSpacing="0.1"
                android:text="price\n50 DH"
                android:gravity="center_horizontal"
                android:textColor="@color/black"
                android:textSize="10dp" />
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/statistic_plus_tard_order_quantity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:letterSpacing="0.1"
                android:text="quantité\n5"
                android:textColor="@color/black"
                android:textSize="10sp" />
        </androidx.appcompat.widget.LinearLayoutCompat>
        <View
            android:layout_width="250dp"
            android:layout_height="0.5dp"
            android:layout_marginTop="5dp"
            android:layout_gravity="center_horizontal"
            android:background="@color/black"/>
        <androidx.appcompat.widget.AppCompatTextView
            android:layout_marginTop="5dp"
            android:id="@+id/statistic_plus_tard_order_timeSend"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginBottom="5dp"
            android:gravity="center_horizontal"
            android:letterSpacing="0.1"
            android:text="temps pour envoyer\n12/15 15:20"
            android:textColor="@color/black"
            android:textSize="10sp" />
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/statistic_plus_tard_btn_resend"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:letterSpacing="0.15"
            android:background="@drawable/bg_item_livery"
            android:textColor="#FFFFFF"
            android:text="renvoyé"/>
    </androidx.appcompat.widget.LinearLayoutCompat>

</androidx.cardview.widget.CardView>