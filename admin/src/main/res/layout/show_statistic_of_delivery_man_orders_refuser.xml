<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".statistics.orders_refuser.ShowStatisticOfDMOrdersRefuser">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/close_activity_of_orders_refused"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:rotation="180"
        android:src="@drawable/close"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/statistic_rv_refuser_orders"
        android:layout_below="@id/close_activity_of_orders_refused"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:listitem="@layout/statistic_orders_refuser_item"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        android:orientation="vertical"/>

</RelativeLayout>