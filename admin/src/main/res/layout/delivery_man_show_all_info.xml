<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:orientation="vertical">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:ignore="ScrollViewSize">
            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/delivery_men_info_btn_close"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/icon_close_layout_info"/>
            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:textColor="@color/black"
                android:padding="10dp"
                android:fontFamily="sans-serif-thin"
                android:textStyle="bold"
                android:text="Prénom et nom"
                android:textSize="10dp" />
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/delivery_men_info_userName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:fontFamily="monospace"
                android:textStyle="bold"
                android:text="user name"
                android:textSize="20dp"
                android:textColor="@color/black"
                android:layout_margin="10dp"
                />
            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:fontFamily="sans-serif-thin"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:padding="10dp"
                android:text="Gmail"
                android:textSize="10dp" />
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/delivery_men_info_gmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:fontFamily="monospace"
                android:textStyle="bold"
                android:text="gmail"
                android:textSize="20dp"
                android:textColor="@color/black"
                android:layout_margin="10dp"
                />
            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:fontFamily="sans-serif-thin"
                android:textStyle="bold"
                android:text="Mot de passe"
                android:textColor="@color/black"
                android:padding="10dp"
                android:textSize="10dp" />
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/delivery_men_info_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:fontFamily="monospace"
                android:textStyle="bold"
                android:text="password"
                android:textSize="20dp"
                android:textColor="@color/black"
                android:layout_margin="10dp"
                />
            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:fontFamily="sans-serif-thin"
                android:textStyle="bold"
                android:text="Ville"
                android:textColor="@color/black"
                android:padding="10dp"
                android:textSize="10dp" />
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/delivery_men_info_city"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="monospace"
                android:textStyle="bold"
                android:gravity="center"
                android:text="city"
                android:textSize="20dp"
                android:textColor="@color/black"
                android:layout_margin="10dp"
                />
            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:textColor="@color/black"
                android:padding="10dp"
                android:fontFamily="sans-serif-thin"
                android:textStyle="bold"
                android:text="Rue"
                android:textSize="10dp" />
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/delivery_men_info_street"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:fontFamily="monospace"
                android:textStyle="bold"
                android:text="street"
                android:textSize="20dp"
                android:textColor="@color/black"
                android:layout_margin="10dp"
                />
            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:fontFamily="sans-serif-thin"
                android:textStyle="bold"
                android:text="numéro"
                android:padding="10dp"
                android:textSize="10dp"
                android:textColor="#000000" />
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/delivery_men_info_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:fontFamily="monospace"
                android:textStyle="bold"
                android:text="number"
                android:textSize="20dp"
                android:textColor="@color/black"
                android:layout_margin="10dp"
                />
            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:fontFamily="sans-serif-thin"
                android:textStyle="bold"
                android:text="Date de l'inscription"
                android:textSize="10dp"
                android:textColor="@color/black"
                android:padding="10dp"
                />
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/delivery_men_info_timeRegistered"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:fontFamily="monospace"
                android:textStyle="bold"
                android:text="time registered"
                android:textSize="20dp"
                android:textColor="@color/black"
                android:layout_margin="10dp"
                />
        </LinearLayout>
    </ScrollView>

</androidx.appcompat.widget.LinearLayoutCompat>