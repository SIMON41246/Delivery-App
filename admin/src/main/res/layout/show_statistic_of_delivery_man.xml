<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".statistics.ShowStatisticOfDeliveryMan">
    <FrameLayout
        android:id="@+id/statistic_FrameLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/statistic_BottomNavigationView"
        />

    <com.ismaeldivita.chipnavigation.ChipNavigationBar
        android:id="@+id/statistic_BottomNavigationView"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/bottom_to_top_carre"
        app:cnb_menuResource="@menu/menu_bottom_statistic"
        app:cnb_unselectedColor="#000000" />
</RelativeLayout>