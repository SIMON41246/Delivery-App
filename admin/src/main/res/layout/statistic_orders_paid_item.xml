<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="20dp"
    android:layout_margin="7dp"
    android:orientation="vertical">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/statistic_order_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bottom_to_top_carre"
        android:orientation="vertical">
        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-black"
            android:layout_marginTop="5dp"
            android:letterSpacing="0.1"
            android:gravity="center"
            android:text="nom du commande"
            android:textColor="@color/black"
            android:textSize="10dp" />
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/statistic_order_paid_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:letterSpacing="0.1"
            android:gravity="center"
            android:ellipsize="end"
            android:text="BOOTS"
            android:textColor="@color/black"
            android:textSize="15dp" />
        <View
            android:layout_width="150dp"
            android:layout_height="0.5dp"
            android:layout_marginTop="5dp"
            android:layout_gravity="center_horizontal"
            android:background="@color/black"/>
        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-black"
            android:letterSpacing="0.1"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:text="l'adresse"
            android:textColor="@color/black"
            android:textSize="10dp" />
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/statistic_order_paid_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:letterSpacing="0.1"
            android:text="HAY RACHAD G10"
            android:lines="2"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="15dp" />
        <View
            android:layout_width="200dp"
            android:layout_height="0.5dp"
            android:layout_marginTop="5dp"
            android:layout_gravity="center_horizontal"
            android:background="@color/black"/>
        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:weightSum="2">
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/statistic_order_paid_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="sans-serif-black"
                android:letterSpacing="0.1"
                android:text="price\n50 DH"
                android:gravity="center_horizontal"
                android:textColor="@color/black"
                android:textSize="10dp" />
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/statistic_order_paid_quantity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="sans-serif-black"
                android:gravity="center_horizontal"
                android:letterSpacing="0.1"
                android:text="quantit\n5"
                android:textColor="@color/black"
                android:textSize="10dp" />
        </androidx.appcompat.widget.LinearLayoutCompat>
        <View
            android:layout_width="250dp"
            android:layout_height="0.5dp"
            android:layout_marginTop="5dp"
            android:layout_gravity="center_horizontal"
            android:background="@color/black"/>
        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2">
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/statistic_order_paid_time_confirmed"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="sans-serif-black"
                android:letterSpacing="0.1"
                android:text="livery\n02/01/2023"
                android:gravity="center_horizontal"
                android:textColor="@color/black"
                android:textSize="10dp" />
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/statistic_order_paid_time_paid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="sans-serif-black"
                android:gravity="center_horizontal"
                android:letterSpacing="0.1"
                android:layout_marginBottom="5dp"
                android:text="payÃ©\n12/01/2023"
                android:textColor="@color/black"
                android:textSize="10dp" />
        </androidx.appcompat.widget.LinearLayoutCompat>
    </androidx.appcompat.widget.LinearLayoutCompat>

</androidx.cardview.widget.CardView>