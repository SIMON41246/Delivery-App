<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="20dp"
    android:layout_margin="10dp"
    android:orientation="vertical">
    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/cardWithLayout"
        android:background="@drawable/bg_item_waiting"
        android:orientation="vertical">
        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-black"
            android:letterSpacing="0.1"
            android:gravity="center"
            android:text="commande"
            android:layout_marginTop="10dp"
            android:textColor="@color/black"
            android:textSize="10dp" />
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/waiting_order_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:letterSpacing="0.1"
            android:lines="1"
            android:gravity="center"
            android:text="BOOTS"
            android:textColor="@color/black"
            android:textSize="15dp" />
        <View
            android:layout_width="150dp"
            android:layout_height="2dp"
            android:layout_marginTop="5dp"
            android:layout_gravity="center_horizontal"
            android:background="@color/black"/>
        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-black"
            android:letterSpacing="0.1"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="l'adresse"
            android:textColor="@color/black"
            android:textSize="10dp" />
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/waiting_order_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="HAY RACHAD G10"
            android:lines="2"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="15dp" />
        <View
            android:layout_width="200dp"
            android:layout_height="2dp"
            android:layout_marginTop="5dp"
            android:layout_gravity="center_horizontal"
            android:background="@color/black"/>
        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:weightSum="2">
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/waiting_order_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:letterSpacing="0.1"
                android:text="prix\n50 DH"
                android:gravity="center_horizontal"
                android:textColor="@color/black"
                android:textSize="10dp" />
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/waiting_order_quantity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:letterSpacing="0.1"
                android:text="quantitÃ©\n5"
                android:textColor="@color/black"
                android:textSize="10dp" />
        </androidx.appcompat.widget.LinearLayoutCompat>
        <View
            android:layout_width="250dp"
            android:layout_height="2dp"
            android:layout_marginTop="5dp"
            android:layout_gravity="center_horizontal"
            android:background="@color/black"/>
        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/btn_gone1"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:weightSum="2">
            <Button
                android:id="@+id/waiting_order_btn_cancel"
                android:layout_width="130dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:layout_marginEnd="10dp"
                android:layout_marginStart="10dp"
                app:icon="@drawable/icon_annuler"
                android:lines="1"
                android:textSize="12dp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:backgroundTint="#C63E74"
                android:text="ANNULER"/>
            <Button
                android:id="@+id/waiting_order_btn_confirm"
                android:layout_width="130dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:layout_marginEnd="10dp"
                android:layout_marginStart="10dp"
                android:textSize="12dp"
                android:lines="1"
                app:icon="@drawable/icon_confirme"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:backgroundTint="#99004324"
                android:text="confirme"/>
        </androidx.appcompat.widget.LinearLayoutCompat>
        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/btn_gone2"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:weightSum="2">
            <Button
                android:id="@+id/waiting_order_btn_no_answer"
                android:layout_width="130dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:layout_marginEnd="10dp"
                android:layout_marginStart="10dp"
                android:textSize="12dp"
                android:lines="1"
                app:icon="@drawable/no_answer"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:backgroundTint="#C38D06"
                android:text="Pas rep.." />
            <Button
                android:id="@+id/waiting_order_btn_notes"
                android:layout_width="130dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:layout_marginEnd="10dp"
                android:layout_marginStart="10dp"
                app:icon="@drawable/icon_note"
                android:lines="1"
                android:textSize="12dp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:backgroundTint="#000000"
                android:text="Remarq.."/>
        </androidx.appcompat.widget.LinearLayoutCompat>
        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/btn_gone3"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:weightSum="2">
            <Button
                android:id="@+id/waiting_order_btn_plus_tard"
                android:layout_width="130dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:layout_marginEnd="10dp"
                android:layout_marginStart="10dp"
                android:textSize="12dp"
                android:lines="1"
                app:icon="@drawable/icon_plus_tard"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:backgroundTint="#1C7FE1"
                android:text="PLUS TARD" />
            <Button
                android:id="@+id/waiting_order_btn_appel"
                android:layout_width="130dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:layout_marginEnd="10dp"
                android:layout_marginStart="10dp"
                app:icon="@drawable/icon_phone"
                android:lines="1"
                android:text="Appel"
                android:textSize="12dp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:backgroundTint="#00598A"
                />
        </androidx.appcompat.widget.LinearLayoutCompat>
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/waiting_order_time_send"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:letterSpacing="0.1"
            android:text="envoyer\n02/01/2023"
            android:gravity="center_horizontal"
            android:textColor="@color/black"
            android:textSize="10sp" />
        <View
            android:layout_width="300dp"
            android:layout_height="2dp"
            android:layout_marginTop="5dp"
            android:layout_gravity="center_horizontal"
            android:background="@color/black"/>
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/waiting_order_btn_show_all_btn"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/close"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="5dp"/>
    </androidx.appcompat.widget.LinearLayoutCompat>

</androidx.cardview.widget.CardView>